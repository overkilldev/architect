{
  "name": "@architect/extension",
  "displayName": "Architect",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:architect-extension.start",
    "onView:architect-extension.start",
    "onView:architect-extension.sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "architect-extension.start",
        "title": "Create Architect Project",
        "category": "Architect"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "architect-extension",
          "title": "Architect",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "architect-extension": [
        {
          "type": "webview",
          "id": "architect-extension.sidebar",
          "name": "Architect Sidebar"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "build": "npx tsc -p ./",
    "start": "cross-env code --extensionDevelopmentPath=$(pwd)",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts --max-warnings=0",
    "test": "echo skip",
    "compile": "echo skip",
    "check-types": "tsc -p ./ --noEmit"
  },
  "devDependencies": {
    "@architect/types": "*",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.68.0",
    "@vscode/test-electron": "^2.1.3",
    "glob": "^8.0.1"
  },
  "dependencies": {
    "fs-extra": "^10.1.0"
  }
}
